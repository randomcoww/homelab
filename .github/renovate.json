{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices"
  ],
  "dockerfile": {
    "enabled": false
  },
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^config_env.tf$/"
      ],
      "matchStrings": [
        "(?<depName>(?<repository>[a-z0-9.-]+(?::\\d+|)(?:/[a-z0-9-]+|)+)/(?<image>[a-z0-9.-]+)):(?<tag>(?<currentValue>(?<version>[\\w.]+)(?:-(?<compat>[\\w.-]+))?)(?:@(?<currentDigest>sha256:[a-f0-9]+))?)"
      ],
      "autoReplaceStringTemplate": "{{{depName}}}:{{{newValue}}}@{{{newDigest}}}",
      "datasourceTemplate": "docker"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^config_env.tf$/"
      ],
      "matchStrings": [
        "\"[a-z0-9.-]+-(?<currentValue>[\\d.]+)\"\\s*# renovate: (?<depName>[\\w/-]+)"
      ],
      "datasourceTemplate": "github-tags",
      "versioningTemplate": "docker"
    }
  ],
  "packageRules": [
    {
      "matchPackageNames": [
        "ghcr.io/randomcoww/ipxe",
        "reg.cluster.internal/randomcoww/hostapd-noscan",
        "reg.cluster.internal/randomcoww/qrcode-resource",
        "ghcr.io/ggml-org/llama.cpp",
        "reg.cluster.internal/randomcoww/llama-swap",
        "reg.cluster.internal/randomcoww/sunshine-desktop",
        "docker.io/cloudflare/cloudflared"
      ],
      "versioning": "regex:^(?<compatibility>[^\\d]+)?(?<minor>\\d+)(\\.(?<patch>\\d+)(\\.(?<build>\\d+))?)?$"
    },
    {
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "automerge": true,
      "ignoreTests": true,
      "groupName": "renovate"
    },
    {
      "matchDepTypes": ["helm_release"],
      "pinDigests": false
    },
    {
      "matchDatasources": [
        "terraform-provider",
        "terraform-module"
      ],
      "registryUrls": [
        "https://registry.opentofu.org"
      ]
    }
  ]
}