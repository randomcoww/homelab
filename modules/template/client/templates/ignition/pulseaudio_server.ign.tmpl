---
variant: fcos
version: 1.0.0
storage:
  files:
    - path: /etc/pulse/default.pa
      append:
        - inline: |
            load-module module-native-protocol-tcp auth-ip-acl=127.0.0.1;${join(";", [
              for n in pulseaudio_server_networks :
                "${p.networks_by_key[n].network}/${p.networks_by_key[n].cidr}"
              ])}
            load-module module-zeroconf-publish