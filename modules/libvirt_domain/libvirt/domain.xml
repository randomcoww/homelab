<domain type='kvm'>
  <name>${name}</name>
  <memory unit='MiB'>${memory}</memory>
  <currentMemory unit='MiB'>${memory}</currentMemory>
  <vcpu placement='static'>${vcpu}</vcpu>
  <os>
    <type arch='x86_64' machine='pc'>hvm</type>
  </os>
  <features>
    <acpi/>
    <apic/>
    <pae/>
    <vmport state='off'/>
  </features>
  <cpu mode='host-passthrough'>
    <topology sockets='1' cores='${vcpu}' threads='1'/>
    <cache level='3' mode='emulate'/>
  </cpu>
  <on_crash>restart</on_crash>
  <devices>
    <emulator>/usr/bin/qemu-kvm</emulator>
    %{~ for i, network_name in sort(keys(interface_devices)) ~}
    <interface type='direct' trustGuestRxFilters='yes'>
      <source dev='${interface_devices[network_name].hypervisor_interface_name}' mode='bridge'/>
      %{~ if can(interface_devices[network_name].macaddress) ~}
      <mac address='${replace(interface_devices[network_name].macaddress, "-", ":")}'/>
      %{~ endif ~}
      %{~ if network_name == pxeboot_interface ~}
      <boot order='1'/>
      %{~ endif ~}
      <model type='virtio-net'/>
    </interface>
    %{~ endfor ~}
    <controller type='usb' model='none'/>
    <controller type='scsi' model='virtio-scsi'/>
    <disk type='file' device='cdrom'>
      <driver name='qemu' type='raw'/>
      <source file='/dev/disk/by-label/${system_image_tag}'/>
      <target dev='sda' bus='scsi'/>
      <readonly/>
    </disk>
    %{~ for hypervisor_device in hypervisor_devices ~}
    <hostdev mode='subsystem' type='pci' managed='yes'>
      <driver name='vfio'/>
      <source>
        <address domain='${hypervisor_device.domain}' bus='${hypervisor_device.bus}' slot='${hypervisor_device.slot}' function='${hypervisor_device.function}'/>
      </source>
      %{~ if can(hypervisor_device.rom_file_path) ~}
      <rom bar='on' file='${hypervisor_device.rom_file_path}'/>
      %{~ endif ~}
    </hostdev>
    %{~ endfor ~}
    <console>
      <target type='virtio'/>
    </console>
    <channel type='spicevmc'>
      <target type='virtio' name='com.redhat.spice.0'/>
      <address type='virtio-serial'/>
    </channel>
    <channel type='unix'>
      <source mode='bind' path='/var/run/libvirt/qga-${name}.sock'/>
      <target type='virtio' name='org.qemu.guest_agent.0'/>
    </channel>
    <memballoon model='virtio'/>
    <rng model='virtio'>
      <backend model='random'>/dev/urandom</backend>
    </rng>
  </devices>
</domain>