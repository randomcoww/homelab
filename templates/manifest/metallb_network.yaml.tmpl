apiVersion: v1
kind: Namespace
metadata:
  labels:
    app: metallb
  name: metallb-system

---
apiVersion: v1
kind: ConfigMap
metadata:
  namespace: metallb-system
  name: config
data:
  config: |
    address-pools:
    - name: my-ip-space
      protocol: layer2
      addresses:
      - ${loadbalancer_pools.kubernetes.network}/${loadbalancer_pools.kubernetes.cidr}