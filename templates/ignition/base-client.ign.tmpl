---
variant: fcos
version: 1.0.0
systemd:
  units:
    - name: libvirtd.service
      dropins:
        - name: 10-virtualization.conf
          contents: |
            [Unit]
            ConditionVirtualization=!vm
            ConditionVirtualization=!container
    - name: systemd-networkd-wait-online.service
      mask: true
    - name: avahi-daemon.service
      mask: true
    - name: avahi-daemon.socket
      mask: true
    - name: chronyd.service
      enabled: true
    - name: NetworkManager.service
      enabled: true
    - name: NetworkManager-wait-online.service
      enabled: true
    - name: fstrim.service
      enabled: true
      dropins:
        - name: 10-all.conf
          contents: |
            [Service]
            ExecStart=
            ExecStart=/usr/sbin/fstrim --all --verbose --quiet

storage:
  files:
    - path: /etc/ssh/sshd_config.d/10-block-password.conf
      mode: 0644
      contents:
        inline: |
          PasswordAuthentication no
    - path: /etc/systemd/journal.conf.d/05-live.conf
      mode: 0644
      contents:
        inline: |
          [Journal]
          Storage=volatile
          RuntimeMaxUse=15M
          ForwardToSyslog=false
          ForwardToConsole=false
    - path: /etc/systemd/system.conf.d/05-live.conf
      mode: 0644
      contents:
        inline: |
          [Manager]
          DumpCore=false
    - path: /etc/NetworkManager/conf.d/custom.conf
      mode: 0644
      contents:
        inline: |
          [main]
          no-auto-default=*

    %{~ for v in p.hwif ~}
    - path: /etc/NetworkManager/system-connections/${v.label}.nmconnection
      mode: 0600
      contents:
        inline: |
          [connection]
          type=ethernet

          [ethernet]
          mac-address=${replace(v.mac, "-", ":")}
          mtu=${lookup(v, "mtu", 9000)}
    %{~ endfor ~}
    %{~ for v in p.network ~}
    %{~ if lookup(v, "id", null) != null ~}
    - path: /etc/NetworkManager/system-connections/${v.label}.nmconnection
      mode: 0600
      contents:
        inline: |
          [connection]
          type=vlan

          [vlan]
          parent=${p.hwif_by_key[v.hwif].if}
          id=${v.id}

          [ipv4]
          method=%{if lookup(v, "dhcp", false)}auto%{else}manual%{endif}
          %{~ if lookup(v, "ip", null) != null && lookup(v, "cidr", null) != null ~}
          addresses=${v.ip}/${v.cidr}
          %{~ endif ~}
    %{~ endif ~}
    %{~ endfor ~}

passwd:
  users:
    - name: ${p.client_user}
      uid: ${p.client_user_uid}
      %{~ if length(client_password) > 0 ~}
      password_hash: ${client_password}
      %{~ endif ~}
      groups:
        - adm
        - sudo
        - systemd-journal
        - wheel