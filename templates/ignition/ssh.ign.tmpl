---
variant: fcos
version: 1.0.0
systemd:
  units:
    - name: sshd.service
      enabled: true

storage:
  files:
    - path: /etc/ssh/sshd_config.d/30-host-certificate.conf
      mode: 0644
      contents:
        inline: |
          HostKey /etc/ssh/ssh_host_ecdsa_key
          HostCertificate /etc/ssh/ssh_host_ecdsa_key-cert.pub
    - path: /etc/ssh/ssh_host_ecdsa_key
      mode: 0600
      contents:
        inline: "${ssh_host_private_key}"
    - path: /etc/ssh/ssh_host_ecdsa_key.pub
      mode: 0600
      contents:
        inline: "${ssh_host_public_key}"
    - path: /etc/ssh/ssh_host_ecdsa_key-cert.pub
      mode: 0600
      contents:
        inline: "${ssh_host_certificate}"
    - path: /etc/ssh/ssh_known_hosts
      mode: 0644
      contents:
        inline: "@cert-authority * ${ssh_ca_authorized_key}"

passwd:
  users:
    - name: ${user}
      ssh_authorized_keys:
        - cert-authority ${ssh_ca_authorized_key}
      groups:
        - adm
        - sudo
        - systemd-journal
        - wheel